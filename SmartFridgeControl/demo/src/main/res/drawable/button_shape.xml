<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorItemBack_down"/>
            <stroke android:width="1dp"
                    android:color="@color/colorItemBorder"/>
            <corners android:radius="5dp"/>
            <padding android:bottom="@dimen/w1"
                android:top="@dimen/w1"
                android:left="@dimen/w1"
                android:right="@dimen/w1"/>

        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/colorItemBack"/>
            <stroke android:width="1dp"
                    android:color="@color/colorItemBorder"/>
            <corners android:radius="5dp"/>
            <padding android:bottom="@dimen/w1"
                     android:top="@dimen/w1"
                     android:left="@dimen/w1"
                     android:right="@dimen/w1"/>
        </shape>
    </item>
</selector>