<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/h2"
        android:id="@+id/testlist"
        android:layout_width="@dimen/w95"
        android:layout_height="@dimen/h70"
        android:layout_gravity="center">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/h2"
        android:gravity="center">
        <Button
            android:id="@+id/testadd"
            android:layout_width="@dimen/w40"
            android:layout_height="@dimen/h6"
            android:background="@drawable/button_shape"
            android:text="增加item"
            android:textSize="@dimen/h2"/>
        <Button
            android:layout_marginLeft="@dimen/w5"
            android:id="@+id/testromove"
            android:layout_width="@dimen/w40"
            android:layout_height="@dimen/h6"
            android:background="@drawable/button_shape"
            android:text="删除item"
            android:textSize="@dimen/h2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/h2"
        android:gravity="center">
        <Button
            android:id="@+id/addrow"
            android:layout_width="@dimen/w40"
            android:layout_height="@dimen/h6"
            android:background="@drawable/button_shape"
            android:text="增加列数"
            android:textSize="@dimen/h2"/>
        <Button
            android:layout_marginLeft="@dimen/w5"
            android:id="@+id/deleterow"
            android:layout_width="@dimen/w40"
            android:layout_height="@dimen/h6"
            android:background="@drawable/button_shape"
            android:text="减少列数"
            android:textSize="@dimen/h2"/>
    </LinearLayout>

</LinearLayout>