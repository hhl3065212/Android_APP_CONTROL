<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.holy.demo.ui.FactoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/w2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/h10"
        android:paddingRight="@dimen/h20">

        <TextView
            android:id="@+id/txt_system_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="系统版本：OS_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
            android:textSize="@dimen/w5"
            android:textColor="@color/button_text"/>

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="@dimen/h20"
            android:layout_height="@dimen/w10"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/w5"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:text="恢复出厂"
            android:textSize="@dimen/w5"
            android:textColor="@color/button_text"/>

    </LinearLayout>

</FrameLayout>
