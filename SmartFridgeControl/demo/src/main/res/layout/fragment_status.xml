<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.holy.demo.ui.StatusFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/w2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/h10"
        android:paddingRight="@dimen/h20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/w17"
                android:layout_height="wrap_content"
                android:text="屏幕亮度"
                android:textColor="@color/button_text"
                android:textSize="@dimen/w4"/>

            <TextView
                android:id="@+id/txt_screen_bright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/h1"
                android:text="100"
                android:textColor="@color/button_text"
                android:textSize="@dimen/w4"
                android:visibility="gone"/>

            <SeekBar
                android:id="@+id/seek_screen_bright"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/h1"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:max="255"
                android:maxHeight="@dimen/w1"
                android:progress="100"
                android:progressDrawable="@drawable/my_seekbar"
                android:splitTrack="false"
                android:thumb="@drawable/my_seekbar_thumb"
                android:thumbOffset="@dimen/w2"/>

            <CheckBox
                android:id="@+id/check_screen_bright"
                android:layout_width="@dimen/w13"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/h1"
                android:button="@drawable/check_shape"
                android:text="自动"
                android:textColor="@color/button_text"
                android:textSize="@dimen/w4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Switch
                android:id="@+id/sw_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
