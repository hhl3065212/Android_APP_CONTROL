<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#44004400"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_wifi_ssid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h7"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/wifi_ssid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ssid"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_gravity="left"
                android:textSize="@dimen/h3"/>

            <TextView
                android:id="@+id/wifi_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="con"
                android:textColor="#888888"
                android:gravity="center"
                android:layout_gravity="left"
                android:textSize="@dimen/h2"
                android:visibility="visible"/>

        </LinearLayout>

        <TextView
            android:id="@+id/wifi_rssi"
            android:layout_width="@dimen/w10"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w1.5"
            android:gravity="right"
            android:layout_gravity="center"
            android:text="-20"
            android:textColor="#888888"
            android:textSize="@dimen/h3"/>

        <TextView
            android:id="@+id/wifi_more"
            android:layout_width="@dimen/w6"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/w1.5"
            android:gravity="center"
            android:layout_gravity="center"
            android:text=">"
            android:textColor="#888888"
            android:textSize="@dimen/h3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/wifi_bssid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="9070u0a808"
            android:textColor="#888888"
            android:textSize="@dimen/h3"/>


        <TextView
            android:id="@+id/wifi_key"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#888888"
            android:textSize="@dimen/h3"
            android:visibility="gone"/>

    </LinearLayout>


</LinearLayout>