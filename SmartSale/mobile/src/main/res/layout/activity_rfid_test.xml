<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haiersmart.smartsale.activity.RfidTestActivity"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_layout">
        <Button
            android:id="@+id/button_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Connect"
            android:visibility="visible"/>

        <Button
            android:id="@+id/button_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Disconnect"
            android:visibility="visible"/>

        <Button
            android:id="@+id/button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start" />
        <Button
            android:id="@+id/button_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop" />
        <Button
        android:id="@+id/button_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Sort" />
        <Button
            android:id="@+id/button_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Upload" />
        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="退出" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/total_count_layout">
        <TextView
            android:id="@+id/textView_once"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="本次读到标签个数" />
        <TextView
            android:id="@+id/textView_readoncecnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="0"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/textView_antpt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总标签个数：" />
        <TextView
            android:id="@+id/textView_readallcnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineLayout_listname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#B8B8B8"
            android:visibility="visible" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:gravity="center"
            android:text="序号"
            android:textColor="#CD3700"
            android:textSize="20sp" />
        <View
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:background="#B8B8B8"
            android:visibility="visible" />
        <!--android:layout_width="220dp"-->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="110"
            android:gravity="left"
            android:text="EPC ID"
            android:textColor="#000000"
            android:clickable="true"
            android:textSize="15sp" />
        <View
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:background="#B8B8B8"
            android:visibility="visible" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:gravity="center"
            android:text="次数"
            android:textColor="#000000"
            android:textSize="15sp" />
        <View
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:background="#B8B8B8"
            android:visibility="visible" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="15"
            android:text="天线"
            android:textColor="#000000" />
        <View
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:background="#B8B8B8"
            android:visibility="visible" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="15"
            android:text="协议"
            android:textColor="#000000" />
        <View
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:background="#B8B8B8"
            android:visibility="visible" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:text="RSSI"
            android:textColor="#000000" />
        <View
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:background="#B8B8B8"
            android:visibility="visible" />
        <TextView
            android:layout_height="wrap_content"
            android:text="频率"
            android:layout_width="0dp"
            android:layout_weight="30"
            android:textColor="#000000" />
        <View
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:background="#B8B8B8"
            android:visibility="visible" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="30"
            android:text="附加数据"
            android:textColor="#000000" />
        <View
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:background="#B8B8B8"
            android:visibility="visible" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <ListView
            android:id="@+id/listView_epclist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:overScrollMode="always"
            android:scrollbars="horizontal|vertical" >

        </ListView>

    </HorizontalScrollView>
</LinearLayout>
